<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/main"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:background="@drawable/item_set"
            android:gravity="center"
            android:text="TITLE"
            android:textSize="@dimen/sp_32"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5sp">

                <Button
                    android:id="@+id/title_1"
                    android:layout_width="326dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="@string/data_1"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/title_2"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="Data 2"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_1" />

                <Button
                    android:id="@+id/title_3"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="Data 3"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_2" />

                <Button
                    android:id="@+id/title_4"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="Data 4"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_3" />

                <Button
                    android:id="@+id/title_5"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="Data 5"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_4" />

                <Button
                    android:id="@+id/title_6"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/item_data_name"
                    android:text="Data 6"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>


